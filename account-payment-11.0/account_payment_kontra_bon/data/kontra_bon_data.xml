<odoo>

        <!-- Request-related subtypes for messaging / Chatter -->
        <record id="mt_request_to_approve" model="mail.message.subtype">
            <field name="name">Kontra Bon to be approved</field>
            <field name="res_model">kontra.bon</field>
            <field name="default" eval="True"/>
            <field name="description">Kontra Bon to be approved</field>
        </record>

        <record id="mt_request_approved" model="mail.message.subtype">
            <field name="name">Kontra Bon approved</field>
            <field name="res_model">kontra.bon</field>
            <field name="default" eval="True"/>
            <field name="description">Kontra Bon approved</field>
        </record>

        <record id="mt_request_rejected" model="mail.message.subtype">
            <field name="name">Kontra Bon rejected</field>
            <field name="res_model">kontra.bon</field>
            <field name="default" eval="True"/>
            <field name="description">Kontra Bon rejected</field>
        </record>

        <record id="mt_request_done" model="mail.message.subtype">
            <field name="name">Kontra Bon Paid</field>
            <field name="res_model">kontra.bon</field>
            <field name="default" eval="True"/>
            <field name="description">Kontra Bon is paid</field>
        </record>

</odoo>
