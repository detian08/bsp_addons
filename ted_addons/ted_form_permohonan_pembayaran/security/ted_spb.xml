<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_spb">
        <field name="name">Surat Permohonan Pembayaran</field>
        <field name="parent_id" ref="base.module_category_purchases"/>
        <field name="sequence">10</field>
    </record>

    <record id="group_spb_user" model="res.groups">
        <field name="name">SPB User Group</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_spb"/>
    </record>

    <record id="group_spb_manager" model="res.groups">
        <field name="name">SPB Manager Group</field>
        <field name="implied_ids" eval="[(4, ref('ted_form_permohonan_pembayaran.group_kontra_bon_user'))]"/>
        <field name="category_id" ref="module_category_kontra_bon"/>
    </record>

    <record model="ir.rule" id="spb_comp_rule">
        <field name="name">SPB Multi Company Rule</field>
        <field name="model_id" ref="model_spb"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),
            ('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="spb_followers_rule" model="ir.rule">
        <field name="name">SPB Display Only Rule</field>
        <field name="model_id" ref="model_spb"/>
        <field name="groups" eval="[(6,0, [ref('group_spb_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">['|',('requested_by','=',user.id),
                                        ('message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>

    <record id="spb_rule" model="ir.rule">
        <field name="name">SPB User Rule</field>
        <field name="model_id" ref="model_spb"/>
        <field name="groups" eval="[(6,0, [ref('group_spb_user')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[('requested_by','=',user.id)]</field>
    </record>

    <record id="spb_manager_rule" model="ir.rule">
        <field name="name">SPB Manager Rule</field>
        <field name="model_id" ref="model_spb"/>
        <field name="groups" eval="[(6,0, [ref('group_spb_manager')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
